{
  "short_name": "Clown Detector",
  "name": "Clown Detector",
  "description": "Weed out silly job listings.",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "index.html",
    "default_icon": "./active_icon-32.png"
  },
  "icons": {
    "16": "./active_icon-128.png",
    "48": "./active_icon-128.png",
    "128": "./active_icon-128.png"
  },
  "permissions": [
    "tabs",
    "storage",
    "declarativeContent",
    "action"
  ],
  "background": {
    "service_worker": "./static/js/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/jobs/search/*"
      ],
      "js": ["./static/js/content.js"],
      "run_at": "document_end"
    }
  ]
}
